{
  "manifest_version": 3,
  "name": "TabChi",
  "description": "Take charge of your new tab page and create a personalized dashboard that's tailored to your needs.",
  "version": "0.9.0",
  "permissions": ["topSites", "favicon", "bookmarks", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon-32.png",
      "128": "images/icon-192.png"
    }
  },
  "icons": {
    "48": "images/icon-32.png",
    "128": "images/icon-192.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      }
    }
  },
  "chrome_url_overrides": {
    "newtab": "dashboard.html"
  },
  "omnibox": {
    "keyword": ">"
  }
}
